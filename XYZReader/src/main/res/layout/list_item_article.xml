<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_layout_margin"
    android:background="@color/theme_primary_light"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <LinearLayout
        android:id="@+id/LinearListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/network_image_height"
            android:layout_gravity="center"
            android:background="@drawable/empty_detail"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="4"
            android:paddingBottom="@dimen/text_title_bottom_margin"
            android:paddingLeft="@dimen/text_side_margin"
            android:paddingRight="@dimen/text_side_margin"
            android:paddingTop="@dimen/text_title_top_margin"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:paddingBottom="@dimen/item_subtitle_bottom_margin"
            android:paddingLeft="@dimen/text_side_margin"
            android:paddingRight="@dimen/text_side_margin"
            android:paddingTop="@dimen/item_subtitle_top_margin"
            android:textColor="@color/WhiteTransparent" />
    </LinearLayout>

</android.support.v7.widget.CardView>
